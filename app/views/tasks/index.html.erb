<h1>My Tasks</h1>
<ul>
  <% @tasks.each do |task| %>
		<% if task.completed %>
  		<li>[X]<%= link_to "#{task['title']}", task_path(task['id']) %></li>
		<% else %>
  		<li>[ ]<%= link_to "#{task['title']}", task_path(task['id']) %></li>
		<% end %>
	<% end %>
</ul>

<%= link_to "Create a new task", new_tasks_path%>